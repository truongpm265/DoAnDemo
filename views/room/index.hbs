<h1 class="container text-center">Room List</h1>
<div class="mb-2">
   <a class="btn btn-success container " href="/room/add">Add new Room</a>

</div>

<table class="table table-primary">
   <tr>
      <th>Room Number</th>
      <th>Room Name</th>
      <th>Type</th>
      <th>Price</th>
      <th>Image</th>
      <th>Description</th>
      <th>Availability</th>
      <th>Menu</th>
   </tr>
   {{#each roomList }}
   <tr>
      <td>{{ roomNumber }}</td>
      <td>{{ name }}</td>
      <td>{{ typeRoom.name }}</td>
      <td>{{ pricePerNight }}VNƒê</td>
      <td>
         <img src="{{ image }}" width="100" height="100">
      </td>
      <td>{{ description }}</td>
      <td>{{#if availability}}Available{{else}}Unavailable{{/if}}</td>
      <td>
         <a class="btn orange" href="/room/edit/{{ _id }}">Edit</a>
         <a class="btn brown" href="/room/delete/{{_id}}"
            onclick="return confirm('Do you want to delete this room ?')" ;>Delete</a>
      </td>
   </tr>
   {{/each}}
</table>