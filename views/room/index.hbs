   {{#each roomList }}
   <tr>
      <td>{{ roomNumber }}</td>
      <td>{{ name }}</td>
      <td>{{ typeRoom.name }}</td>
      <td>{{ pricePerNight }}VNƒê</td>
      <td>
         <img src="{{ image }}" width="100" height="100">
