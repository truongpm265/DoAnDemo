<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="text-center m-2">
                    <p class="card-title mb-2 text-success" style="font-size:xx-large">Manage Type Room</p>
                    <a class="badge badge-success m-2 " style="font-size:medium" href="/typeRoom/add">Add
                        new Type</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th style="text-align: center;">Menu</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each typeRoomList }}
                            <tr>
                                <td>
                                    <a href="/typeRoom/detail/{{_id}}">
                                        {{ name }}
                                    </a>
                                </td>
                                <td>{{ description }}</td>
                                <td style="text-align: center;">
                                    <a class="badge badge-warning" href="/typeRoom/edit/{{_id}}">Edit</a>
                                    <a class="badge badge-danger" href="/typeRoom/delete/{{_id}}"
                                        onclick="return confirm('Do you want to delete this TypeRoom ?')" ;>Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
