<h1 class="container text-center">Room List</h1>
<div class="container mb-2">
   <a class="btn btn-success container " href="/typeRoom/add">Add new Type</a>
</div>

<table class="table table-primary">
   <tr>
      <th>TypeRoom Name</th>
      <th>Description</th>
      <th>Menu</th>
   </tr>
   {{#each typeRoomList }}
   <tr>
      <td>
         <a href="/typeRoom/detail/{{_id}}">
            {{ name }}
         </a>
      </td>
      <td>{{ description }}</td>
      <td>
         <a class="btn orange" href="/typeRoom/edit/{{_id}}">Edit</a>
         <a class="btn brown" href="/typeRoom/delete/{{_id}}"
            onclick="return confirm('Do you want to delete this TypeRoom ?')" ;>Delete</a>
      </td>
   </tr>
   {{/each}}
</table>

<div class="main-panel">

   <div class="row">
      <div class="col-md-12 grid-margin stretch-card">
         <div class="card">
            <div class="card-body">
               <div class="text-center m-2">
                  <p class="card-title mb-2 text-success" style="font-size:xx-large">Manage Type Room</p>
                  <a class="badge badge-success m-2 " style="font-size:medium" href="/typeRoom/add">Add
                     new Type</a>
               </div>
               <div class="table-responsive">
                  <table class="table table-striped table-borderless">
                     <thead>
                        <tr>
                           <th>TypeRoom Name</th>
                           <th>Description</th>
                           <th>Menu</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{#each typeRoomList }}
                        <tr>
                           <td>
                              <a href="/typeRoom/detail/{{_id}}">
                                 {{ name }}
                              </a>
                           </td>
                           <td>{{ description }}</td>
                           <td>
                              <a class="btn orange" href="/typeRoom/edit/{{_id}}">Edit</a>
                              <a class="btn brown" href="/typeRoom/delete/{{_id}}"
                                 onclick="return confirm('Do you want to delete this TypeRoom ?')" ;>Delete</a>
                           </td>
                        </tr>
                        {{/each}}
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>