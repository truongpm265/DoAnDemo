<h1 class="container text-center">Room List</h1>
<div class="container mb-2">
   <a class="btn btn-success container " href="/typeRoom/add">Add new Type</a>
</div>

<table class="table table-primary">
   <tr>
      <th>TypeRoom Name</th>
      <th>Description</th>
      <th>Menu</th>
   </tr>
   {{#each typeRoomList }}
   <tr>
      <td>
         <a href="/typeRoom/detail/{{_id}}">
            {{ name }}
         </a>
      </td>
      <td>{{ description }}</td>
      <td>
         <a class="btn orange" href="/typeRoom/edit/{{_id}}">Edit</a>
         <a class="btn brown" href="/typeRoom/delete/{{_id}}"
            onclick="return confirm('Do you want to delete this TypeRoom ?')" ;>Delete</a>
      </td>
   </tr>
   {{/each}}
</table>