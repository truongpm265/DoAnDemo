<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="text-center m-2">
                    <p class="card-title mb-2 text-success" style="font-size:xx-large">Manage
                        Reservation</p>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>User Name</th>
                                <th>Check-In Date</th>
                                <th>Check-Out Date</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th style="text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each reservationList }}
                            <tr>
                                <td>{{ room.roomNumber }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ formatDate this.checkInDate}}</td>
                                <td>{{ formatDate this.checkOutDate }}</td>
                                <td>{{ totalPrice }} VNƒê</td>
                                <td class="font-weight-medium">
                                    {{#if (eq status "Pending")}}
                                    <div class="badge badge-warning">Pending</div>
                                    {{else if (eq status "Confirm")}}
                                    <div class="badge badge-success">Confirm</div>
                                    {{else if (eq status "Cancel")}}
                                    <div class="badge badge-danger">Cancel</div>
                                    {{/if}}
                                </td>
                                <td style="text-align: center;">
                                    <a class="font-weight-medium" href="/admin/confirm/{{_id}}">
                                        <div class="badge badge-success">Confirm</div>
                                    </a>
                                    <a class="font-weight-medium" href="/admin/cancel/{{_id}}">
                                        <div class="badge badge-danger">Cancel</div>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
